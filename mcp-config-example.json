{
    "mcpServers": {
        "lichess-http-mcp-server": {
            "url": "http://localhost:8000/sse",
            "type": "http"
        },
        "lichess-stdio-mcp-server": {
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "{PathToProject}/scripts/start-mcp-stdio.ps1"
            ],
            "env": {
                "LICHESS_API_TOKEN": "your_token_here"
            },
            "type": "stdio"
        }
    }
}